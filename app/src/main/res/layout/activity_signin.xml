<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue"
    tools:context=".SigninActivity">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/imageDekor1"
        android:layout_width="79dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/elipse_4"
        />

    <ImageView
        android:id="@+id/imageDekor2"
        android:layout_width="42dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageDekor1"
        app:srcCompat="@drawable/elipse_7" />

    <TextView
        android:id="@+id/Tsign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="Halo,"
        android:textColor="@color/green"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDekor2" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/Tsign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="42sp"
        android:text="Silakan masuk!"
        android:textColor="@color/gray"
        android:id="@+id/tmasuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:fontFamily="@font/inter"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/twelcom"
        android:text="Selamat datang. Isikan form berikut
untuk masuk dan melanjutkan"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tmasuk" />

    <TextView
        android:id="@+id/Tnama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="No Handphone"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twelcom" />


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="#222F92"
        android:textColor="@color/white"
        tools:text="ihsansyafiul@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tnama"/>


    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="Password"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="#222F92"
        android:textColor="@color/white"
        tools:text="ihsansyafiul@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword"/>

    <LinearLayout
        android:id="@+id/kontainer"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/inter_medium"
            android:text="Belum punya akun ya? "
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bDaftar"
            android:fontFamily="@font/inter_semibold"
            android:background="@android:color/transparent"
            android:text="Daftar Kuy"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/bLogin"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/kontainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Login"
        android:textColor="@color/blueNight"
        android:textSize="20dp"
        android:fontFamily="@font/inter_medium"
        android:background="@drawable/rectangle_120"
        android:layout_width="400dp"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>
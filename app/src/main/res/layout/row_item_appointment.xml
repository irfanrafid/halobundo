<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_marginEnd="20dp"
    app:cardElevation="30dp"
    app:cardCornerRadius="15dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/darkBlue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_item_appointment"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="10dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="@drawable/rounded_corner_blue_medium"
            android:textColor="@color/gray"
            android:padding="5dp"
            android:id="@+id/jadwal"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="27 Desember, 09.00 - 10,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/jadwal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/hospital"
            android:id="@+id/profile"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/jadwal"
            android:id="@+id/tvhospital"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Dr. Bayu Dirgahayu"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/Specialist"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toTopOf="@id/tvhospital"
            android:text="Kandungan"
            android:textColor="@color/blueMedium"
            app:layout_constraintStart_toEndOf="@id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
    



</androidx.cardview.widget.CardView>